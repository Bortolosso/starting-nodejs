<h2>List of posts: </h2>
<hr>
<a href="/admin/post/add">
    <button class="btn btn-success mt-1">New post</button>
</a>

{{#each post}}
    <dir class="card">
        <dir class="card-body">
            <h4>{{tittle}}</h4><br>
            <p>Descrição: {{description}}</p>
            <small>Categoria: {{categorie.name}}</small><br>
            <small>Data: {{date}}</small><br>
            <a href="/admin/post/edit/{{id}}"><button class="btn btn-success">Edit Post</button></a>
        </dir>
    </dir>
{{else}}
    <h5>Nenhuma postagem registrada !</h5>
{{/each}}